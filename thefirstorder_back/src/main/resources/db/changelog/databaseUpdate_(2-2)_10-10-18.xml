<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="keith">
        <dropTable cascadeConstraints="true"
                   schemaName="public"
                   tableName="food_customisation"/>
    </changeSet>

    <changeSet id="2" author="keith">
        <createTable tableName="food_customisation"
                     remarks="Example: Noodle Texture, Add Noodle, Soup, Sauces, Garnish">
            <column name="food_customisation_id" type="varchar(10)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="food_price_menu_id" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="food_price_food_id" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(500)">
                <constraints nullable="true" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="food_customisation" baseColumnNames="food_price_menu_id"
                                 constraintName="food_customisation_food_price_menu_id_fk"
                                 referencedTableName="food_price" referencedColumnNames="menu_id"/>

        <addForeignKeyConstraint baseTableName="food_customisation" baseColumnNames="food_price_food_id"
                                 constraintName="food_customisation_food_price_food_id_fk"
                                 referencedTableName="food_price" referencedColumnNames="food_id"/>
    </changeSet>

    <changeSet id="3" author="keith">
        <dropTable cascadeConstraints="true"
                   schemaName="public"
                   tableName="customisation_option"/>
    </changeSet>

    <changeSet id="4" author="keith">
        <createTable tableName="customisation_option"
                     remarks="Example: (Under Noodle Texture Category) - Hard, Normal, Soft">
            <column name="customisation_id" type="varchar(10)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="food_customisation_customisation_id" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="food_customisation_food_price_menu_id" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="food_customisation_food_price_food_id" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(500)">
                <constraints nullable="false" />
            </column>
            <column name="price" type="double">
                <constraints nullable="true" />
            </column>
        </createTable>
    </changeSet>

    <changeSet id="5" author="keith">
        <dropTable cascadeConstraints="true"
                   schemaName="public"
                   tableName="customisation"/>
    </changeSet>

    <changeSet id="6" author="keith">
        <createTable tableName="customer_customisation"
                     remarks="Customer specific food customisation Example: (Noodles) - Soft, (Garnish) - No Spring Onions">
            <column name="food_customisation_customisation_id" type="varchar(10)">
                <constraints nullable="false" primaryKey="true"/>
            </column>
            <column name="food_customisation_food_price_menu_id" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="food_customisation_food_price_food_id" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="customer_order_order_id" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="customer_order_food_id" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="type" type="varchar(45)">
                <constraints nullable="false" />
            </column>
            <column name="description" type="varchar(500)">
                <constraints nullable="false" />
            </column>
        </createTable>
        <addForeignKeyConstraint baseTableName="customer_customisation" baseColumnNames="food_customisation_customisation_id"
                                 constraintName="customer_customisation_food_customisation_customisation_id_fk"
                                 referencedTableName="food_customisation" referencedColumnNames="food_customisation_id"/>
        <addForeignKeyConstraint baseTableName="customer_customisation" baseColumnNames="food_customisation_food_price_menu_id"
                                 constraintName="customer_customisation_food_customisation_food_price_menu_id_fk"
                                 referencedTableName="food_customisation" referencedColumnNames="food_price_menu_id"/>
        <addForeignKeyConstraint baseTableName="customer_customisation" baseColumnNames="food_customisation_food_price_food_id"
                                 constraintName="customer_customisation_food_customisation_food_price_food_id_fk"
                                 referencedTableName="food_customisation" referencedColumnNames="food_price_food_id"/>
    </changeSet>
</databaseChangeLog>