<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="xinyi">
        <createTable tableName="category"
                     remarks="A table to contain all food categories">
            <column name="category_id" type="varchar(10)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="category_name" type="varchar(45)">
                <constraints nullable="false"/>
            </column>
            <column name="cat_img" type="varchar(500)">
                <constraints nullable="false"/>
            </column>
        </createTable>

        <insert tableName="category">
            <column name="category_id" value="CAT001"/>
            <column name="category_name" value="Mains"/>
            <column name="cat_img" value="img1"/>
        </insert>
        <insert tableName="category">
            <column name="category_id" value="CAT002"/>
            <column name="category_name" value="Beverage"/>
            <column name="cat_img" value="img2"/>
        </insert>
        <insert tableName="category">
            <column name="category_id" value="CAT003"/>
            <column name="category_name" value="Desserts"/>
            <column name="cat_img" value="img3"/>
        </insert>

        <addForeignKeyConstraint baseTableName="food" baseColumnNames="category_id"
                                 constraintName="food_category_id_fk"
                                 referencedTableName="category" referencedColumnNames="category_id"/>
    </changeSet>
</databaseChangeLog>