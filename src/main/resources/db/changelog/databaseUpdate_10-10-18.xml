    <changeSet id="2" author="keith">
        <createTable tableName="customisation_category"
                     remarks=" A table to contain all categories the customisations is in.
                     If under set: Appetizer, Drinks else Ala Carte ">
            <column name="customisation_category_id" type="varchar(10)">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="menu_id" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="food_id" type="varchar(10)">
                <constraints nullable="false"/>
            </column>
            <column name="customisation_category_description" type="varchar(100)">
                <constraints nullable="true" />
            </column>
        </createTable>

        <addForeignKeyConstraint baseTableName="customisation_category" baseColumnNames="menu_id"
                                 constraintName="customisation_category_menu_id_fk"
                                 referencedTableName="food_price" referencedColumnNames="menu_id"/>

        <addForeignKeyConstraint baseTableName="customisation_category" baseColumnNames="food_id"
                                 constraintName="customisation_category_food_id_fk"
                                 referencedTableName="food_price" referencedColumnNames="food_id"/>

